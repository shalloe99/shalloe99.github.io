---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header">
    <div class="post-title-container">
      <h1 class="post-title">{{ page.title }}</h1>
      {% if page.layout == 'page' and page.collection == 'gallery' %}
        <a href="{{ '/gallery/' | relative_url }}" class="return-button" title="Back to Gallery">
          <i class="fas fa-arrow-left"></i>
          <span>Back to Gallery</span>
        </a>
      {% endif %}
    </div>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

</div>
